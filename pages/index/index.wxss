/**index.wxss**/
.header {
  position: fixed;
  top: 0;
  width: 100%;
  height: 80px;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
}

.header-info {
  height: 90rpx;
  overflow: hidden;
}

.message,
.qcode {
  float: left;
  width: 100rpx;
  height: 80rpx;
}

.message-icon,
.qcode-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 0 0 20rpx;
}

.search-box {
  float: left;
  width: 550rpx;
  height: 70rpx;
  border: 1px solid #f0f0f0;
  line-height: 70rpx;
  box-sizing: border-box;
}

.search-icon {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  top: 10rpx;
  left: 10rpx;
  margin-right: 10rpx;
}

.search-text {
  display: inline-block;
  color: #999;
}

.header-product-type {
  white-space: nowrap; 
  font-size: 14px;
  line-height: 80rpx;
  color: #666;
}

.type-item {
  display: inline-block;
  width: 120rpx;
  height: 80rpx;
  text-align: center;
}

.type-all {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 0 0 20rpx;
}

.swiper-box {
  margin-top: 80px;
  width: 100%;
}

.slide-image {
  width: 750rpx;
}